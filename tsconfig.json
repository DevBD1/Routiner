{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "types/**/*",
    "src/**/*",
    "constants/styles.ts",
    "components/ui",
    "components/Collapsible.tsx",
    "components/HelloWave.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "dist"
  ]
}
